<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/iphone_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_original"
    >
  
  <!--  -->
	<LinearLayout android:id="@+id/main_button"
	           android:layout_width="fill_parent"
	           android:layout_height="fill_parent"
	           android:gravity="center_vertical|center_horizontal"
	           android:orientation="vertical">
	</LinearLayout>
	
	<ImageView android:id="@+id/img_signal_strength"
		android:layout_width="200dip"
		android:layout_height="180dip"
		android:scaleType="fitXY"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:src="@drawable/pic_sys_signal_5"/>
		
	<ImageView android:id="@+id/img_touch_area"
		android:layout_width="80dip"
		android:layout_height="180dip"
		android:scaleType="fitXY"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:src="@drawable/pic_touch_area"/>	
		
	<ImageView android:id="@+id/img_home"
		android:layout_width="60dip"
		android:layout_height="60dip"
		android:scaleType="fitXY"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="150dip"
		android:layout_marginBottom="30dip"
		android:src="@drawable/ic_home"/>		

</RelativeLayout>
